{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": false,
    "typeRoots": ["node_modules/@types", "types"],
    "sourceMap": true,
    "lib": ["es2017", "esnext.asynciterable", "dom"]
  }
}
